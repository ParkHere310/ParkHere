<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/date_field"
        android:layout_above="@+id/startTime_view"
        android:layout_alignEnd="@+id/title_field"
        android:layout_alignTop="@+id/date_view"
        android:layout_toEndOf="@+id/date_view" />

    <TextView
        android:text="Title: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="26dp"
        android:id="@+id/post_title" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/title_field"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/post_title"
        android:layout_alignTop="@+id/post_title" />

    <TextView
        android:text="Upload Picture: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/pic_textview"
        android:layout_below="@+id/post_title"
        android:layout_alignStart="@+id/post_title" />

    <Button
        android:text="Upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uploadButton"
        android:layout_alignTop="@+id/pic_textview"
        android:layout_alignEnd="@+id/title_field"
        android:layout_marginEnd="20dp"
        android:layout_toEndOf="@+id/pic_textview" />

    <TextView
        android:text="Enter date of reservation: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uploadButton"
        android:layout_alignStart="@+id/pic_textview"
        android:layout_marginTop="13dp"
        android:id="@+id/date_view" />

    <TextView
        android:text="Enter start time:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/startTime_view"
        android:layout_below="@+id/date_view"
        android:layout_alignStart="@+id/date_view" />

    <TextView
        android:text="Enter end time:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/endTime_view"
        android:layout_below="@+id/startTime_view"
        android:layout_alignStart="@+id/startTime_view" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/startTime_field"
        android:layout_above="@+id/endTime_view"
        android:layout_alignEnd="@+id/date_field"
        android:layout_alignTop="@+id/startTime_view"
        android:layout_alignStart="@+id/uploadButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/endTime_field"
        android:layout_alignTop="@+id/endTime_view"
        android:layout_alignStart="@+id/startTime_field"
        android:layout_alignBottom="@+id/endTime_view"
        android:layout_alignEnd="@+id/startTime_field" />

    <TextView
        android:text="Enter price:   $"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/endTime_view"
        android:layout_alignStart="@+id/endTime_view"
        android:layout_marginTop="14dp"
        android:id="@+id/textView8"
        android:layout_alignEnd="@+id/endTime_view" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignTop="@+id/textView8"
        android:id="@+id/price_field"
        android:layout_alignEnd="@+id/endTime_field"
        android:layout_toEndOf="@+id/textView8"
        android:layout_alignBottom="@+id/textView8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignTop="@+id/type_view"
        android:layout_alignEnd="@+id/price_field"
        android:id="@+id/type_field"
        android:layout_alignBottom="@+id/type_view"
        android:layout_toEndOf="@+id/type_view" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_alignStart="@+id/description_view"
        android:id="@+id/description_field"
        android:layout_alignEnd="@+id/type_field"
        android:layout_above="@+id/postButton"
        android:layout_below="@+id/description_view" />

    <Button
        android:text="Post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/postButton"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/description_field"
        android:layout_marginBottom="29dp" />

    <CheckBox
        android:text="Covered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/coveredCheckBox"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/description_view" />

    <CheckBox
        android:text="SUV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/suvCheckBox"
        android:layout_alignBaseline="@+id/handicapCheckBox"
        android:layout_alignBottom="@+id/handicapCheckBox"
        android:layout_alignEnd="@+id/price_field" />

    <CheckBox
        android:text="Handicapped"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/handicapCheckBox"
        android:layout_alignBaseline="@+id/coveredCheckBox"
        android:layout_alignBottom="@+id/coveredCheckBox"
        android:layout_toStartOf="@+id/suvCheckBox" />

    <TextView
        android:text="Enter description:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description_view"
        android:layout_below="@+id/coveredCheckBox"
        android:layout_toStartOf="@+id/endTime_field" />
</RelativeLayout>