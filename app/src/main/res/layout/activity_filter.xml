<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Sort By:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:id="@+id/sortTitle" />

    <Button
        android:text="Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/priceButton"
        android:layout_below="@+id/ratingButton"
        android:layout_alignStart="@+id/ratingButton" />

    <RadioButton
        android:text="Descending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ascendRadioBut"
        android:layout_alignStart="@+id/ascendRadioBut"
        android:layout_marginTop="12dp"
        android:id="@+id/descendRadioBut" />

    <Button
        android:text="Distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/distButton"
        android:layout_below="@+id/sortTitle"
        android:layout_centerHorizontal="true" />

    <RadioButton
        android:text="Ascending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/ascendRadioBut"
        android:layout_below="@+id/priceButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/rangeLabel"
        android:layout_below="@+id/descendRadioBut"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Lowest"
        android:ems="10"
        android:id="@+id/lowRangeField"
        android:layout_below="@+id/rangeLabel"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/descendRadioBut" />

    <Button
        android:text="Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/highRangeField"
        android:layout_alignEnd="@+id/priceButton"
        android:id="@+id/sortDoneButton" />

    <Button
        android:text="Rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/ratingButton"
        android:layout_below="@+id/distButton"
        android:layout_alignEnd="@+id/distButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Highest"
        android:ems="10"
        android:id="@+id/highRangeField"
        android:layout_below="@+id/rangeLabel"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/sortDoneButton" />

    <TextView
        android:text="to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toLabel"
        android:layout_alignBaseline="@+id/highRangeField"
        android:layout_alignBottom="@+id/highRangeField"
        android:layout_centerHorizontal="true" />

</RelativeLayout>