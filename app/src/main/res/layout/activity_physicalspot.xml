<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:id="@+id/title"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Title Here" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/cast_album_art_placeholder"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageView" />


        <TextView
            android:text="Description Here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/actual_description"
            android:layout_above="@+id/editButton"
            android:layout_below="@+id/address_label"
            android:layout_alignEnd="@+id/editButton"
            android:layout_alignStart="@+id/removeButton" />


        <Button
            android:text="Edit This Spot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:id="@+id/editButton"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/imageView" />

        <Button
            android:text="Remove This Spot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/removeButton"
            android:layout_below="@+id/actual_description"
            android:layout_alignEnd="@+id/title"
            android:layout_marginEnd="28dp" />

        <TextView
            android:text="Description:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address_label"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/isHandicapped"
            android:layout_alignStart="@+id/actual_description" />

        <TextView
            android:text="Handicap Here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/isHandicapped"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/address_label" />

        <TextView
            android:text="Address Here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address_view"
            android:layout_below="@+id/imageView"
            android:layout_alignStart="@+id/isCovered"
            android:layout_alignEnd="@+id/actual_description" />

        <TextView
            android:text="Type Here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/isType"
            android:layout_above="@+id/isHandicapped"
            android:layout_alignStart="@+id/isHandicapped"
            android:layout_marginBottom="12dp" />

        <TextView
            android:text="Covered Here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/isCovered"
            android:layout_below="@+id/address_view"
            android:layout_alignStart="@+id/isType"
            android:layout_marginTop="24dp" />

    </RelativeLayout>
</RelativeLayout>