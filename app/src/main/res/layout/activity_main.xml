<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.trevorbernard.parkhere.MainActivity">

    <Button
        android:text="Post Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:id="@+id/PostPageButton" />

    <Button
        android:text="View Past Reservation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:id="@+id/ViewPastReservationButton"
        android:layout_below="@+id/CurrentReservationButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Listed Spot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ListedSpotPage"
        android:layout_below="@+id/ViewPastReservationButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp" />

    <Button
        android:text="Current Reservation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CurrentReservationButton"
        android:layout_below="@+id/PostPageButtonButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="164dp" />

    <Button
        android:text="Search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ListedSpotPage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:id="@+id/SearchButton" />

</RelativeLayout>
