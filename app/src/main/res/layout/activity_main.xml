<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.trevorbernard.parkhere.MainActivity">

    <Button
        android:text="Post Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/PostPageButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Current Reservations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CurrentReservationButton"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/PostPageButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Log Out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logoutButton"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/SearchButton"
        android:layout_marginBottom="17dp" />

    <Button
        android:text="View Past Reservations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/ViewPastReservationButton"
        android:layout_below="@+id/CurrentReservationButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="My Listings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ListedSpotPage"
        android:layout_below="@+id/ViewPastReservationButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

    <Button
        android:text="View Payments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ViewPaymentsButton"
        android:layout_below="@+id/ListedSpotPage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <Button
        android:text="View Cancellation Policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/policyButton"
        android:layout_below="@+id/SearchButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SearchButton"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/ViewPaymentsButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
