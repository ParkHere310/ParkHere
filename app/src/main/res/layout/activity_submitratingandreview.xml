<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp"
        android:id="@+id/SubmitButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_marginTop="42dp"
        android:id="@+id/CommentUserText"
        android:hint="Comment on User"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/CommentUserText"
        android:id="@+id/CommentSpotText"
        android:hint="Comment On Spot" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:id="@+id/SpotRatingBar"
        android:layout_below="@+id/CommentSpotText"
        android:layout_alignStart="@+id/UserRatingBar"
        android:numStars="5" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:id="@+id/UserRatingBar"
        android:numStars="5"
        android:layout_below="@+id/CommentUserText"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
